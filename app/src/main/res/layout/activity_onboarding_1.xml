<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Onboarding1Activity">

    <ImageView
        android:id="@+id/logoFILKOMPLAIN"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_orange" />

    <ImageView
        android:id="@+id/bgOnboarding1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_onboarding_1" />

    <TextView
        android:id="@+id/textOnboarding1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/satoshi_black"
        android:text="Ada yang\n rusak?\nLapor aja!"
        android:textAlignment="textEnd"
        android:textColor="@color/boldblue"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/textOnboarding2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textOnboarding2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/satoshi_bold"
        android:text="Ngga perlu nunggu kelamaan."
        android:textAlignment="textEnd"
        android:textColor="@color/lightgrey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="167dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_btn_next_ripple"
            android:padding="0dp"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:paddingLeft="24dp"
            android:paddingBottom="2dp"
            android:text="Lanjut"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:fontFamily="@font/satoshi_bold" />
    </FrameLayout>

    <ImageView
        android:id="@+id/pmOnboarding1"
        android:layout_width="53dp"
        android:layout_height="9dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="80dp"
        android:paddingLeft="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pm_onboarding_1" />

</androidx.constraintlayout.widget.ConstraintLayout>